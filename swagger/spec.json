{
  "openapi": "3.0.0",
  "info": {
    "title": "Marcoo BFF",
    "description": "Marcoo BFF",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:{port}",
      "description": "Local server",
      "variables": {
        "port": {
          "default": "8082"
        }
      }
    },
    {
      "url": "https://marcoo-bff.herokuapp.com/",
      "description": "(Internal) Production server"
    }
  ],
  "tags": [
    {
      "name": "API",
      "description": "Microservice endpoints"
    },
    {
      "name": "Health check",
      "description": "Service health check"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Check service health",
        "tags": [
          "Health check"
        ],
        "security": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/v1/supermarkets/{cep}/products": {
      "get": {
        "summary": "Your GET endpoint",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                },
                "examples": {
                  "example-product": {
                    "$ref": "#/components/examples/ProductExample"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          },
          "502": {
            "$ref": "#/components/responses/ServiceError"
          }
        },
        "operationId": "get-products",
        "description": "Obtém produtos disponíveis",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "name",
            "description": "Busca pelo nome do produto"
          }
        ]
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "cep",
          "in": "path",
          "required": true,
          "description": "Número do CEP"
        }
      ]
    },
    "/v1/supermarkets/{cep}/products/categories/{type}/{category}": {
      "get": {
        "summary": "Your GET endpoint",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                },
                "examples": {
                  "example-product": {
                    "$ref": "#/components/examples/ProductExample"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          },
          "502": {
            "$ref": "#/components/responses/ServiceError"
          }
        },
        "operationId": "get-products-by-categories",
        "description": "Obtém os produtos por categoria",
        "parameters": []
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "cep",
          "in": "path",
          "required": true,
          "description": "Número do CEP"
        },
        {
          "schema": {
            "type": "string",
            "enum": [
              "first",
              "second",
              "third"
            ]
          },
          "name": "type",
          "in": "path",
          "required": true,
          "description": "Tipo da categoria"
        },
        {
          "schema": {
            "type": "string"
          },
          "name": "category",
          "in": "path",
          "required": true,
          "description": "Id da categoria"
        }
      ]
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "HealthCheckResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Application running at: 8082"
          },
          "healthy": {
            "type": "boolean",
            "example": true
          },
          "services": {
            "type": "object",
            "additionalProperties": {
              "description": "A map of services, where the keys correspond to service names, and the value to it's health",
              "type": "boolean",
              "example": true
            }
          }
        }
      },
