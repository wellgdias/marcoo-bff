                      ],
                      "properties": {
                        "idProduct": {
                          "type": "string",
                          "minLength": 1
                        },
                        "amount": {
                          "type": "number"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "data"
                ],
                "x-examples": {
                  "example-1": {
                    "data": [
                      {
                        "idProduct": "asdfsdfsdf",
                        "amount": 2
                      },
                      {
                        "idProduct": "asdfsdfsdf",
